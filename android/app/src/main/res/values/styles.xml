<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <!-- See https://plus.google.com/+AndroidDevelopers/posts/Z1Wwainpjhd -->
    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="List">
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Text styles -->
    <style name="Field">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Field.Address">
        <item name="android:ellipsize">middle</item>
    </style>
    <style name="Field.Value">
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Field.Value.Small">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Field.Value.Large">
        <item name="android:textSize">28sp</item>
    </style>
    <style name="Field.Timestamp">
        <item name="android:textSize">16sp</item>
    </style>


</resources>
